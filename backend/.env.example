APP_ENV=production
FLASK_DEBUG=0
FLASK_HOST=127.0.0.1
PORT=5000
LOG_LEVEL=INFO
REQUEST_LOG=0
USE_PROXY_FIX=1

# Seguridad
SECRET_KEY=change-me
SESSION_COOKIE_SECURE=1
SESSION_COOKIE_SAMESITE=Lax
ADMIN_SESSION_HOURS=8
# Requiere token para /auth/bootstrap en produccion
ADMIN_BOOTSTRAP_TOKEN=
# Cookie del token admin (solo aplica si usas el panel)
ADMIN_TOKEN_SECURE=1
ADMIN_TOKEN_SAMESITE=Strict

# CORS (si el frontend esta en otro dominio)
CORS_ENABLED=0
CORS_ORIGINS=https://tudominio.com,https://www.tudominio.com

# Base de datos
DB_PATH=./data/subscriptions.db

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=
S3_REGION=us-east-1
S3_PREFIX=publicaciones/
S3_PUBLIC_BASE_URL=
S3_ALLOWED_PREFIXES=publicaciones/,logos/,favicons/
S3_UPLOAD_MAX_BYTES=10485760
S3_UPLOAD_EXPIRES=3600

# Rate limiting (formato: limite,segundos)
RATE_LIMIT_AUTH=10,300
RATE_LIMIT_SUBSCRIBE=20,3600
RATE_LIMIT_CONTACT=20,3600
